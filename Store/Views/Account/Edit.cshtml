@model EditViewModel


@{
    ViewBag.Title = "Edit your profile";
}
<form asp-action="Edit" asp-controller="Account">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <input type="hidden" asp-for="Id" />
        <label asp-for="Name" class="control-label">Name</label>
        <input required type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="control-label">Surname</label>
        <input required type="text" asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">Number</label>
        <input required min="10" type="text" asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Your Email</label>
        <input required="" type="email" asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-outline-secondary" />
    </div>
</form>