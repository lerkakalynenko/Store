@model EditPasswordModel
@{
    ViewBag.Title = "Changing password";
}
<h2>Changing password for user: @Model.Email</h2>
<form asp-action="EditPassword" asp-controller="Account">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />

    <div class="form-group">
        <label asp-for="OldPassword" class="control-label">Enter your current password</label>
        <input type="password" asp-for="OldPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NewPassword" class="control-label">Enter new password</label>
        <input type="password" asp-for="NewPassword" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-outline-dark" />
    </div>
</form>